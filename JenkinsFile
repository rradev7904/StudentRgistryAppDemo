pipeline{
    agent any
    environment {
        // Define any environment variables here
        NODE_VERSIONS = '22.x'
    }

    tools{
        nodejs "${NODE_VERSIONS}"
    }

    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/rradev7904/StudentRgistryAppDemo'
            }
        }

        stage('Install Dependencies'){
            steps{
                script {
                    bat 'npm install'
                    }
                }
            }

        stage('Start application and run tests'){
            steps{
                script {
                    bat 'npm start &'
                    bat 'wait-on http://localhost:8090'
                    bat 'npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'CI Pipeline completed'
        }
    }
}